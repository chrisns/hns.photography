{# collections.tagList returns only the tags added in markdown files. #}

<div class="post-card__image">

<div class="pswp-gallery pswp-gallery--single-column" id="gallery--getting-started">
    {% for image in params.post.images %}
  <a href="assets/images/scraped/{{ image.id }}.jpg" 
    data-pswp-width="{{image.width}}" 
    data-pswp-height="{{image.height}}"
    data-cropped="true" 
    target="_blank">
    {% if loop.first %}
      <img src="assets/images/scraped/{{ image.id }}.jpg" alt="{{ params.post.title }}">
    {% endif %}
  </a>
    {% endfor %}
</div>

</div>


<script type="module">
  import PhotoSwipeLightbox from "/assets/scripts/vendors/photoswipe-lightbox.esm.js";
  import PhotoSwipe from "/assets/scripts/vendors/photoswipe.esm.js";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery--getting-started",
    children: "a",
    pswpModule: PhotoSwipe,
  });
  lightbox.init();
</script>


<div class="post-card__content">
    <p class="post-card__title h5">
      {{ params.post.title }}
    </p>
    <p>{{ params.post.description }}</p>
</div>
